@model MATO.NET.ViewModels.CreateRegionViewModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

@using (Html.BeginForm("CreateRegion", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-12">
            <div id="createTitleForm">
                <fieldset class="mt20">
                    <legend>Region details</legend>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Name)
                            <br>
                            @Html.TextBoxFor(model => Model.Name, null, new { @class = "form-control" })
                            <br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.SelectedManagerId)
                            <br>
                            @Html.DropDownListFor(m => m.SelectedManagerId, new SelectList(Model.RegionalManager, "Id", "UserName"), "", new { @class = "form-control" })
                            <br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-danger pull-right">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

}

@section Scripts {


    <script>
        $(".breadCrumbLinks").append("<li><a href=\"/Admin/Index\">Admin</a></li><li>Create a Region</li>");
    </script>

}